{
	"languageserver": {
        "intelephense": {
			// This is not idea! Unfortunately vim doesn't seem to be aware of volta.
            "command": "/home/ben/.volta/bin/intelephense",
            "args": ["--stdio"],
            "filetypes": ["php"],
            "initializationOptions": {
                "storagePath": "/tmp/intelephense"
            }
        },
        "rome-lsp": {
          "command": "/home/ben/.volta/bin/rome",
          "args": ["lsp"],
          "filetypes": [
            "javascript",
            "javascriptreact",
            "typescript",
            "typescriptreact",
            "json"
          ],
          "rootPatterns": [".config"],
          "requireRootPattern": true
        }
    },
	"phpactor.enable": true,
	"phpactor.path": "~/.local/share/nvim/plugged/phpactor/bin/phpactor"
}
